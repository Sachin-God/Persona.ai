generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  // remove output to use default location, or set output = "node_modules/.prisma/client"
  // output = "node_modules/.prisma/client"
}


datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category {
  id       String    @id @default(uuid())
  name     String
  personas Persona[]
}

model Persona {
  id          String @id @default(uuid())
  userid      String
  username    String
  imgSrc      String
  name        String @db.Text
  description String
  instruction String @db.Text
  seed        String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  @@index([categoryId])
  // @@fulltext([name])
  @@index([name]) //@@index is B Tree Search Feature
}

enum Role {
  user
  system
}

model Message {
  id      String @id
  role    Role
  content String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  personaId String
  userId    String

  persona Persona @relation(fields: [personaId], references: [id], onDelete: Cascade)

  @@index([personaId])
}

model UserSubscription {
  id                     String    @id @default(uuid())
  userId                 String    @unique
  stripeCustomerId       String?   @map(name: "stripe_customer_id")      // NOT unique
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id") 
  stripePriceId          String?   @map(name: "stripe_price_id")         // NOT unique
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end") // NOT unique
}
